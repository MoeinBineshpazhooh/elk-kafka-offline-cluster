# env/logstash.env.example
# Copy to env/logstash.env (gitignored)

LOGSTASH_VERSION=9.2.4
LS_JAVA_OPTS=-Xms512m -Xmx512m

# Kafka bootstrap servers (brokers)
KAFKA_BOOTSTRAP_SERVERS=10.10.4.131:9092,10.10.4.132:9092

# IMPORTANT: set as a Ruby array string (no quotes around the whole value)
# Example: ["app-logs","system-logs"]
KAFKA_TOPICS=["kiblog-test"]

# Kafka consumer group (shared across logstash01/logstash02 for load balancing)
KAFKA_GROUP_ID=logstash-consumers

# Optional tuning
KAFKA_CLIENT_ID=logstash
KAFKA_AUTO_OFFSET_RESET=latest
KAFKA_CONSUMER_THREADS=2

# Elasticsearch output
ELASTICSEARCH_HOSTS=https://10.10.4.101:9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=ChangeMe_StrongPassword

# TLS CA for Elasticsearch (mounted in compose)
ELASTICSEARCH_SSL_CACERT=/usr/share/logstash/config/certs/ca/ca.crt
ELASTICSEARCH_SSL_VERIFICATIONMODE=full
